<% provide(:title, "Showing Contact") %>

<div class="main-area"><!-- main area -->
  <%= render 'title_bar' %>
  <div class="main-holder"><!-- main holder -->
    <div id="content"><!-- content -->
      <div class="content_full_width"><!-- start content full width -->
        <h3><u>Name</u>:  <%= @contact.name %></h3>
        <h3><u>Company</u>: <%= @contact.company %></h3>
        <h3><u>Email</u>: <%= mail_to @contact.email %></h3>
        <h3><u>Phone #</u>: <%= @contact.phone %></h3>
        <h3><u>Submit Date:</u>: <%= @contact.created_at %></h3><hr />
      </div><!-- end content full width -->
      <p class="alignright"><%= link_to "Return to Contacts Index", contacts_path %></p>
    </div><!-- end content -->
  </div><!-- end main holder -->
</div><!-- end main area -->